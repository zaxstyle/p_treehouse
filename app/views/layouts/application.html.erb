<!DOCTYPE html>
<html>
<head>
  <title>MalaysianAri</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="container">
			<a class="navbar-brand" href="#"> MalaysianAri </a>
			<ul class="nav navbar-nav">
				<li><%= link_to "All Statuses", feed_path %></li>
			</ul>
			<ul class="nav navbar-nav pull-right">
				<% if user_signed_in? %>
					<li><%= link_to current_user.full_name %></li>
					<li><%= link_to "Account settings", edit_account_path %></li> 
					<li><%= link_to "Log Out", logout_path %></li> 
				 <% else %>
					<li><%= link_to "sign in", login_path %></li>
					<li><%= link_to "sign up", register_path%></li>
		        <% end%>
				    
			</ul>
				
		</div>
	</nav>	


	<div class="container">

       <%= render 'layouts/flash_messages' %>


		<%= yield %>
	</div>
</body>
</html>
